    "version": "0.2.0",
    "configurations": [
      {
        "name": "Test archivo actual",
        "type": "php",
        "request": "launch",
        "runtimeArgs": ["-dxdebug.mode=debug", "-dxdebug.start_with_request=yes"],
        "cwd": "${workspaceRoot}",
        "program": "${workspaceRoot}/backend/vendor/bin/phpunit",
        "args": ["${workspaceRoot}/backend/src"],
        "port": 9003
      },
      {
        "name": "Todos los tests",
        "args": ["${workspaceRoot}/backend/src"],
        "type": "php",
        "request": "launch",
        "runtimeArgs": ["-dxdebug.mode=debug", "-dxdebug.start_with_request=yes"],
        "cwd": "${workspaceRoot}",
        "program": "${workspaceRoot}/backend/vendor/bin/phpunit",
        "port": 9003
      },
      {
        "name": "Escuchar servidor (ya iniciado)",
        "type": "php",
        "request": "launch",
        "port": 9003
      },
      {
        "name": "Launch currently open script",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "runtimeArgs": ["-dxdeb,g.mode=debug", "-dxdebug.start_with_request=yes"],
        "port": 9003
      }
    ]
  }